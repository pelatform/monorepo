{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "turbo run clean",
    "clean:all": "turbo run clean && turbo run clean:all && rm -rf .turbo node_modules pnpm-lock.yaml",
    "dev": "turbo run dev",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:apps": "turbo run build --filter=./apps/* --only",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "start": "turbo start",
    "lint": "turbo run lint",
    "lint:format": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "format": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "types:check": "turbo run types:check"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@next/eslint-plugin-next": "^15.5.3",
    "@types/eslint": "^9.6.1",
    "@types/node": "24.5.2",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "turbo": "2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=20"
  }
}
